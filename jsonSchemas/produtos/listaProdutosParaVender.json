{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Product",
    "description": "A product from Acme's catalog",
    "type": "object",
    "properties": 
    {
        "listaProdutos": 
        {
            "type": "object",
            "properties": 
            {
                "produto": 
                {
                    "type": "object",

                    "anyOf":
                    [
                        { 
                            "type":"array",
                            "items": 
                            {
                                "produtoId":
                                {
                                    "type": "integer"
                                },
                                "nome":
                                {
                                    "type":"string"
                                },
                                "categoria":
                                {
                                    "type": "string"
                                },
                                "precoUnitario":
                                {
                                    "type":"integer"
                                },
                                "precoPromocional":
                                {
                                    "type":"integer"
                                },
                                "percentagemDesconto":
                                {
                                    "type":"integer"
                                },
                                "precoKilo":
                                {
                                    "type":"integer"
                                },
                                "origem":{
                                    "type":"string"
                                },
                                "data":{
                                    "type":"object",
                                    "properties":{
                                        "dataValidade":{"type":"string"},
                                        "dataProducao":{"type":"string"}

                                    }
                                }

                            }            
                        }
                    ]
                }      
            }
        }
    }
}